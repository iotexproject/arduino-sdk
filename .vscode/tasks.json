{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "IoTeX SDK: Build unit tests",
            "command": "cd ${workspaceRoot}/build && cmake -DCMAKE_BUILD_TYPE=Debug -DBUILD_TESTING=ON ../ && make -j 6 ",
            "options": {
                "cwd": "${workspaceRoot}/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "{command:workbench.files.action.saveAllInGroup}"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Http-grpc server: start",
            "command": "envoy -c envoy-conf.yaml",
            "options": {
                "cwd": "${workspaceRoot}/tools/server"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "{command:workbench.files.action.saveAllInGroup}",
                "Http-grpc server: generate protobufs"
            ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Http-grpc server: stop",
            "command": "killall envoy",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [ "Http-grpc server: generate protobufs" ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Http-grpc server: restart",
            "command": "killall envoy && envoy -c envoy-conf.yaml",
            "options": {
                "cwd": "${workspaceRoot}/tools/server"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Http-grpc server: generate protobufs",
            "command": "./generate_proto.sh --clone",
            "options": {
                "cwd": "${workspaceRoot}/tools/server"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "{command:workbench.files.action.saveAllInGroup}"
            ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "Fake http-grpc server: launch",
            "command": "python3 server_fake.py",
            "options": {
                "cwd": "${workspaceRoot}/tools/server-fake"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "{command:workbench.files.action.saveAllInGroup}"
            ],
            "dependsOrder": "sequence"
        },
    ]
}